<h3>Section Nom Roll</h3>
    <!-- <script src="script.js"></script> -->
     <!-- "action" states which view the click will go to, "method" states the method used in index.js -->

<% people.forEach(person => { %>
  <div class="row">
    <div class="name_container"><%= person.name %></div>
    <div class="edit_function"><button onclick="window.location='/<%= person.id %>/edit';">Edit</button></div>
    <div class="delete_function">
      <form method="POST" action="/<%= person.id %>?_method=DELETE">
        <button type="submit">Delete</button>
      </form>
    </div>
  </div>
<% }) %>
